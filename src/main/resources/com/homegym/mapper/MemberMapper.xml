<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace = "MemberDAO"> <!-- com.homegym.mapper.MemberMapper -->
	<resultMap type="com.homegym.biz.member.MemberVO" id="memberMap">
		<!-- <id property="memberId" column="memberId"/> -->
		<result property="mID" column="mId"/>
		<result property="memberId" column="memberId"/>
		<result property="password" column="password"/>
		<result property="name" column="name"/>
		<result property="nickname" column="nickname"/>
		<result property="phone" column="phone"/>
		<result property="zipCode" column="zipCode"/>
		<result property="address" column="address"/>
		<result property="image" column="image"/>
		<result property="birth" column="birth"/>
		<result property="gender" column="gender"/>
		<result property="enabled" column="enabled"/>
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>
	
	<resultMap type="com.homegym.biz.member.AuthVO" id="authMap">
		<result property="mID" column="mId"/>
		<result property="memberId" column="memberId"/>
		<result property="auth" column="auth"/>
	</resultMap>
	
	<select id="loadUserByUsername" resultMap="memberMap">
	Select mem.m_id, mem.memberId, password, name, nickname, phone, zip_code, address, image, birth, gender, enabled, auth FROM member mem LEFT OUTER JOIN member_auth auth on mem.memberId = auth.memberId WHERE mem.memberId= #{memberId};
	</select>
	
	<!-- 회원가입 쿼리 -->
	<insert id="memberJoin">
	insert into member(memberId, password, name, nickname, phone, zip_code, address, birth, gender) values (#{memberId}, #{password}, #{name}, #{nickname}, #{phone}, #{zipCode}, #{address}, #{birth}, #{gender});
    </insert>
    
    <!-- 회원가입 AUTH  -->
    <insert id="insertMemberAuth">
    insert into member_auth(memberId, auth) values (#{memberId}, "ROLE_MEMBER");
    </insert>
    
    <!-- 아이디 중복 체크 -->
	<!-- <select id="idChk" resultType="int">
		SELECT COUNT(*) FROM MEMBER
		WHERE MEMBERID = #{memberId};
	</select> -->
</mapper>